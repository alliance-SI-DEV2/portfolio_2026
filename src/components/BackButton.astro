---
const { href = "/", text = "Back", icon = "arrow" } = Astro.props;

const icons = {
    arrow: "M10 19l-7-7m0 0l7-7m-7 7h18",
    home: "M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m0 0h3m-3 0a1 1 0 001-1V10M10 20l4-4",
    portfolio: "M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"
};
---

<a 
    href={href} 
    class="inline-flex items-center gap-2 px-4 py-2 text-white/70 hover:text-yellow-200 transition-all duration-300 group hover:bg-white/5 rounded-lg"
>
    <svg class="size-5 transform group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={icons[icon] || icons.arrow}></path>
    </svg>
    <span class="font-medium">{text}</span>
</a>