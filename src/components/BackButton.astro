---
const { href = "/", text = "Back", icon = "arrow" } = Astro.props as {
    href?: string;
    text?: string;
    icon?: string;
};

const icons = {
    // Navigation arrows
    arrow: "M10 19l-7-7m0 0l7-7m-7 7h18",
    "arrow-left": "M15 19l-7-7 7-7",
    "arrow-right": "M9 5l7 7-7 7",
    
    // Portfolio and work
    portfolio: "M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10",
    briefcase: "M12 14l9-5-9-5-9 5 9 5z M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z",
    
    // Back navigation
    back: "M11 17l-5-5m0 0l5-5m-5 5h12",
    "chevron-left": "M15 18l-6-6 6-6",
};
---

<a 
    href={href} 
    class="inline-flex items-center gap-2 px-4 py-2 text-white/70 hover:text-yellow-200 transition-all duration-300 group hover:bg-white/5 rounded-lg"
>
    <svg class="size-5 transform group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={icons[icon as keyof typeof icons] || icons.arrow}></path>
    </svg>
    <span class="font-medium">{text}</span>
</a>